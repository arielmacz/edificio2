<%= form_tag do %>
<fieldset>
<legend>Ingrese Usuario y Clave</legend>
<div>
<label for="name">Usuario:</label>
<%= text_field_tag :name, params[:name] %>
</div>
<div>
<label for="password">Clave:</label>
<%= password_field_tag :password, params[:password] %>
</div>
<div>
<%= submit_tag "Login" %>
</div>
</fieldset>
<% end %>
</div>
